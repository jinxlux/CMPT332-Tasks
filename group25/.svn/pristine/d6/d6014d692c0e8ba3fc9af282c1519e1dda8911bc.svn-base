#include <stdbool.h>
#include <stdio.h>
#include <stdlib.h>

#include <math.h>
#include <unistd.h>

/*#define DEBUG*/

struct page {
    int number; /* number == -1 means unused */
    bool reference;
    bool dirty;
};

int npages;
int next_slot;
int nslots;
struct page *slots;
int oldestslot;

/* Handles a page fault via the clock algorithm.
 * Returns the pointer to the slot the victim is in. */
struct page *find_victim_slot() {
    /* TODO: implement second chance page replacement algorithm */
    int oldest_temp;
    if(next_slot < nslots){
    	return NULL;
    }else{
        while(slots[oldestslot].reference || slots[oldestslot].dirty){
            #ifdef DEBUG
                printf("current point to page %d; reference: %d; dirty: %d\n",slots[oldestslot].number,slots[oldestslot].reference,slots[oldestslot].dirty);
             #endif
            if(slots[oldestslot].reference && slots[oldestslot].dirty){
                #ifdef DEBUG
                    printf("(1,1): current point to page %d; reference: %d; dirty: %d\n",slots[oldestslot].number,slots[oldestslot].reference,slots[oldestslot].dirty);
                #endif
                slots[oldestslot].reference = 0;
            }else if(slots[oldestslot].reference){
                #ifdef DEBUG
                    printf("(1,0): current point to page %d; reference: %d; dirty: %d\n",slots[oldestslot].number,slots[oldestslot].reference,slots[oldestslot].dirty);
                #endif
                slots[oldestslot].reference = 0;
            }else{
                #ifdef DEBUG
                    printf("(0,1): current point to page %d; reference: %d; dirty: %d\n",slots[oldestslot].number,slots[oldestslot].reference,slots[oldestslot].dirty);
                #endif
                slots[oldestslot].dirty = 0;
            }
            oldestslot++;
            if(oldestslot >= nslots){
                oldestslot = 0;
            }
        }
        #ifdef DEBUG
            printf("(choose)current point to page %d; reference: %d; dirty: %d\n",slots[oldestslot].number,slots[oldestslot].reference,slots[oldestslot].dirty);
        #endif
        oldest_temp = oldestslot;
        oldestslot++;
        if(oldestslot >= nslots){
            oldestslot = 0;
        }
    }
    return slots + oldest_temp;
}

int main(int argc, char **argv) {
    int times;
    int page;
    bool fault;
    bool write;
    struct page *p;

    if (argc != 3 && argc != 4) {
        printf("usage: %s npages nslots <times>\n", argv[0]);
        exit(1);
    }

    npages = atoi(argv[1]);
    if (npages <= 0) {
        printf("npages must be greater than 0\n");
        exit(1);
    }

    nslots = atoi(argv[2]);
    if (nslots <= 0) {
        printf("nslots must be greater than 0\n");
        exit(1);
    }
    next_slot = 0;
    oldestslot = 0;
    slots = malloc(sizeof(struct page) * nslots);

    if (argc == 4) {
        times = atoi(argv[3]);
        if (times <= 0) {
            printf("times must be greater than 0.\n");
            exit(1);
        }
    } else {
        times = -1;
    }

    for (p = slots; p < &slots[nslots]; p++) {
        p->number = -1;
        p->reference = false;
        p->dirty = false;
    }

    while (times < 0 || times-- > 0) {
        page = npages * sqrt((double) rand() / RAND_MAX);
        write = rand() % 2;

        if (write) {
            printf("RW on page %d.", page);
        } else {
            printf("R  on page %d.", page);
        }

        fault = true;
        for (p = slots; p < &slots[nslots]; p++) {
            if (p->number != page) continue;
            p->reference = true;
            p->dirty |= write;
            fault = false;
            break;
        }

        if (fault) {
            printf(" This triggered a page fault.");
            p = find_victim_slot();
            if (next_slot < nslots) {
                printf(" There was a free slot!");
                p = slots + next_slot++;
            } else {
                printf(" The chosen victim was page %d.", p->number);
            }
            p->number = page;
            p->reference = true;
            p->dirty = write;
        }

        if (times < 0) usleep(100 * 1000);

        putchar('\n');
    }

    return 0;
}

